<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.texousliu.opengitmoji</id>
    <name>Open Gitmoji</name>
    <vendor>texousliu</vendor>

    <depends>com.intellij.modules.platform</depends>

    <description>
        <![CDATA[
            Description is settings in the build.gradle file
        ]]>
    </description>

    <change-notes>
        <![CDATA[
            Change notes is settings in the build.gradle file
        ]]>
    </change-notes>

    <extensions defaultExtensionNs="com.intellij">
        <completion.contributor language="TEXT"
                                order="first, before commitCompletion"
                                implementationClass="com.github.texousliu.opengitmoji.contributor.OpenGitmojiCompletionContributor"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable instance="com.github.texousliu.opengitmoji.config.OpenGitmojiConfiguration" groupId="other"
                             id="open.texousliu.config.settings.gm.OpenGitmojiSettings"/>
    </extensions>

</idea-plugin>
